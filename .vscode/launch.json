{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: SAP Data Migration Tool",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/data_migration_check_app.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run CRM Opportunity App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["run", "${workspaceFolder}/crm_opportunity_app.py"]
        }
    ]
}